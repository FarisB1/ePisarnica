@{
    ViewData["Title"] = "Logout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Odjava</h3>
                </div>
                <div class="card-body">
                    <p>Da li ste sigurni da se želite odjaviti?</p>
                    <form asp-controller="Account" asp-action="LogoutPost" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Da, odjavi se</button>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Otkaži</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>