@model ePisarnica.ViewModels.RoleManagementViewModel

<div class="user-details">
    <div class="row">
        <div class="col-md-6">
            <strong>Username:</strong>
        </div>
        <div class="col-md-6">
            @Model.Username
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-6">
            <strong>Email:</strong>
        </div>
        <div class="col-md-6">
            @Model.Email
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-6">
            <strong>Current Role:</strong>
        </div>
        <div class="col-md-6">
            <span class="badge @(Model.CurrentRole == "Admin" ? "bg-success" : "bg-primary")">
                @Model.CurrentRole
            </span>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <small class="text-muted">User ID: @Model.UserId</small>
        </div>
    </div>
</div>